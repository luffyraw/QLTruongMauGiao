@model PagedList.IPagedList<QuanLyTruongMauGiao.Models.PHUHUYNH>
@using PagedList.Mvc;
<style>
    .anh {
        width: 100px;
        height: 100px;
    }

    .pagination > li > a {
        float: left;
        padding: 6px 12px;
        margin-left: -1px;
        line-height: 1.42857143;
        border: 1px solid #ddd;
    }

    .pagination > .active a {
        background-color: #337ab7;
        color: #fff;
    }

    .pagination li:hover {
        background-color: #687fff;
    }

    .pagination li a:hover {
        color: #fff;
    }
</style>
<div class="ibox" id="PhuHuynhList">
    <div class="ibox-head">
        <div class="ibox-title">@Html.ActionLink("Thêm", "Create")</div>
    </div>
    <div class="ibox-body">
        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Họ Tên</th>
                    <th>Ngày Sinh</th>
                    <th>Giới Tính</th>
                    <th>Địa Chỉ</th>
                    <th>Điện thoại</th>
                    <th>Tài Khoản</th>
                </tr>
            </thead>
            @{
                int stt = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    stt++;
                    <tr>
                        <td>
                            @stt
                        </td>
                        <td>
                            @item.TenPH
                        </td>
                        <td>
                            @item.NamSinh.ToString("dd-MM-yyyy")
                        </td>
                        @{
                            string gioiTinh;
                            if (item.GioiTinh)
                            {
                                gioiTinh = "Nam";
                            }
                            else
                            {
                                gioiTinh = "Nữ";
                            }
                        }
                        <td>
                            @gioiTinh
                        </td>
                        <td>
                            @item.DiaChi
                        </td>
                        <td>
                            @item.DienThoai
                        </td>
                        <td>
                            @item.TenTK
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaPH }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaPH }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaPH })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-sm-12 col-md-5">
                Trang @(Model.PageCount < Model.PageNumber ?0:Model.PageNumber)/@Model.PageCount
            </div>
            <div class="page">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                 new PagedListRenderOptions
                      {
                    LinkToFirstPageFormat = "<<",
                    LinkToPreviousPageFormat = "<",
                    LinkToNextPageFormat = ">",
                    LinkToLastPageFormat = ">>",
                    MaximumPageNumbersToDisplay = 10,
                    DisplayEllipsesWhenNotShowingAllPageNumbers = false
                 })
            </div>
        </div>
    </div>

</div>



