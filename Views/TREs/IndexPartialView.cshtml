@model PagedList.IPagedList<QuanLyTruongMauGiao.Models.TRE>
@using PagedList.Mvc;
<style>
    .anh {
        width: 100px;
        height: 100px;
    }
</style>

<h3>Danh sách trẻ</h3>
<div class="ibox">
    <div class="ibox-head">
        <div class="ibox-title">@Html.ActionLink("Thêm", "Create")</div>
    </div>
    <div class="ibox-body">
        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <td>STT</td>
                    <th>Tên lớp</th>
                    <th>Tên phụ huynh</th>
                    <th>Tên trẻ</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>Quê quán</th>
                    <th>Dân tộc</th>
                    <th>Ngày nhập học</th>
                    <th>Ảnh</th>
                </tr>
            </thead>
            @{
                int stt = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    stt++;
                    <tr>
                        <td>
                            @stt
                        </td>
                        <td>
                            @item.LOP.TenLop
                        </td>
                        <td>
                            @item.PHUHUYNH.TenPH
                        </td>
                        <td>
                            @item.TenTre
                        </td>
                        <td>
                            @item.NgaySinh.ToString("dd/MM/yyyy")
                        </td>
                        @{
                            if (item.GioiTinh)
                            {
                                <td>Nam</td>
                            }
                            else
                            {
                                <td>Nữ</td>
                            }
                        }
                        <td>
                            @item.QueQuan
                        </td>
                        <td>
                            @item.DanToc
                        </td>
                        <td>
                            @item.NgayNhapHoc
                        </td>
                        <td>
                            <img class="anh" src="~/Image/@item.Anh"/>
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaTre }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTre }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaTre })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-sm-12 col-md-5">
                Trang @(Model.PageCount < Model.PageNumber ?0:Model.PageNumber)/@Model.PageCount
            </div>
            <div class="col-sm-12 col-md-7">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                 new PagedListRenderOptions
                      {
                    LinkToFirstPageFormat = "<<",
                    LinkToPreviousPageFormat = "<",
                    LinkToNextPageFormat = ">",
                    LinkToLastPageFormat = ">>",
                    MaximumPageNumbersToDisplay = 6,
                    DisplayEllipsesWhenNotShowingAllPageNumbers = false
                 })
            </div>
        </div>
    </div>

</div>