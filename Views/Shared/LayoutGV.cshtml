@using QuanLyTruongMauGiao.Models;
@{
    TAIKHOAN user = Session["user"] as TAIKHOAN;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width initial-scale=1.0">
    <title>Admincast bootstrap 4 &amp; angular 5 admin template, Шаблон админки | Dashboard</title>
    <!-- GLOBAL MAINLY STYLES-->
    <link href="~/Content/assets/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/assets/vendors/themify-icons/css/themify-icons.css" rel="stylesheet" />
    <!-- PLUGINS STYLES-->
    <link href="~/Content/assets/vendors/jvectormap/jquery-jvectormap-2.0.3.css" rel="stylesheet" />
    <!-- THEME STYLES-->
    <link href="~/Content/assets/css/main.min.css" rel="stylesheet" />
    <!-- PAGE LEVEL STYLES-->
</head>
@RenderSection("scripts", required: false)
<body class="fixed-navbar">
    <div class="page-wrapper">
        <!-- START HEADER-->
        <header class="header">
            <div class="page-brand">
                <a class="link" href="#">
                    <img src="~/Image/mnminhkhai.png" width="50px" />
                    <span class="brand">
                        Minh Khai
                    </span>
                </a>
            </div>
            <div class="flexbox flex-1">
                <!-- START TOP-LEFT TOOLBAR-->
                <ul class="nav navbar-toolbar">
                    <li>
                        <a class="nav-link sidebar-toggler js-sidebar-toggler"><i class="ti-menu"></i></a>
                    </li>
                </ul>
                <!-- END TOP-LEFT TOOLBAR-->
                <!-- START TOP-RIGHT TOOLBAR-->
                <ul class="nav navbar-toolbar">
                    <li class="dropdown dropdown-user">
                        <a class="nav-link dropdown-toggle link" data-toggle="dropdown">
                            <img src="~/Image/@user.AnhDaiDien" width="30px" />
                            <span></span>@user.TenTK<i class="fa fa-angle-down m-l-5"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="#"><i class="fa fa-user"></i>Profile</a>
                            <a class="dropdown-item" href="/Home/ChangePassword"><i class="fa fa-cog"></i>Password</a>
                            <a class="dropdown-item" href="#"><i class="fa fa-support"></i>Support</a>
                            <li class="dropdown-divider"></li>
                            <a class="dropdown-item" href="/Home/Logout"><i class="fa fa-power-off"></i>Logout</a>
                        </ul>
                    </li>
                </ul>
                <!-- END TOP-RIGHT TOOLBAR-->
            </div>
        </header>
        <!-- END HEADER-->
        <!-- START SIDEBAR-->
        <nav class="page-sidebar" id="sidebar">
            <div id="sidebar-collapse">
                <div class="admin-block d-flex">
                    <div>
                        <img src="~/Image/@user.AnhDaiDien" width="45px" />
                    </div>
                    <div class="admin-info">
                        <div class="font-strong">@user.TenTK</div><small>@user.PhanQuyen</small>
                    </div>
                </div>
                <ul class="side-menu metismenu">
                    <li>

                        <a class="active" href="/ChucNangGiaoVien/DiemDanh">
                            <i class="sidebar-item-icon fa fa-th-large"></i>
                            <span class="nav-label">Điểm danh</span>
                        </a>
                    </li>
                    <li>

                        <a href="/ChucNangGiaoVien/XemDanhSachLop">
                            <i class="sidebar-item-icon fa fa-bookmark"></i>
                            <span class="nav-label">Xem lớp học</span>
                        </a>

                    </li>
                    <li>

                        <a href="/ChucNangGiaoVien/DanhSachDanhGia">
                            <i class="sidebar-item-icon fa fa-table"></i>
                            <span class="nav-label">Đánh giá trẻ</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- END SIDEBAR-->
        <div class="content-wrapper">
            <!-- START PAGE CONTENT-->
            <div class="page-content fade-in-up">
                @RenderBody()

                <style>
                    .visitors-table tbody tr td:last-child {
                        display: flex;
                        align-items: center;
                    }

                    .visitors-table .progress {
                        flex: 1;
                    }

                    .visitors-table .progress-parcent {
                        text-align: right;
                        margin-left: 10px;
                    }
                </style>

            </div>
            <!-- END PAGE CONTENT-->
            <footer class="page-footer">
                <div class="font-13">
                    2021 <b>CNTT4</b> Trường mầm non Minh Khai
                </div>
                <div class="to-top"><i class="fa fa-angle-double-up"></i></div>
            </footer>
        </div>
    </div>
    
    <!-- BEGIN PAGA BACKDROPS-->
    <div class="sidenav-backdrop backdrop"></div>
    <div class="preloader-backdrop">
        <div class="page-preloader">Loading</div>
    </div>
    <!-- END PAGA BACKDROPS-->
    <!-- CORE PLUGINS-->
    <script src="~/Content/assets/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/vendors/popper.js/dist/umd/popper.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/vendors/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/vendors/metisMenu/dist/metisMenu.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/vendors/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- PAGE LEVEL PLUGINS-->
    <script src="~/Content/assets/vendors/chart.js/dist/Chart.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/vendors/jvectormap/jquery-jvectormap-2.0.3.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/vendors/jvectormap/jquery-jvectormap-world-mill-en.js" type="text/javascript"></script>
    <script src="~/Content/assets/vendors/jvectormap/jquery-jvectormap-us-aea-en.js" type="text/javascript"></script>
    <!-- CORE SCRIPTS-->
    <script src="~/Content/assets/js/app.js" type="text/javascript"></script>
    <!-- PAGE LEVEL SCRIPTS-->
    <script src="~/Content/assets/js/scripts/dashboard_1_demo.js" type="text/javascript"></script>
</body>

</html>