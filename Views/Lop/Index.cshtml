@model PagedList.IPagedList<QuanLyTruongMauGiao.Models.LOP>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .pagination > li > a {
        float: left;
        padding: 6px 12px;
        margin-left: -1px;
        line-height: 1.42857143;
        border: 1px solid #ddd;
    }

    .pagination > .active a {
        background-color: #337ab7;
        color: #fff;
    }

    .pagination li:hover {
        background-color: #687fff;
    }

    .pagination li a:hover {
        color: #fff;
    }
</style>
<h2>Danh sách lớp</h2>

<div class="ibox">
    <div class="ibox-head">
        <div class="ibox-title">@Html.ActionLink("Thêm", "Create")</div>
    </div>
    <div class="ibox-body">
        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <td class="col-1">STT</td>
                    <th>Tên lớp</th>
                    <th>Sĩ số</th>
                    <th>Độ tuổi</th>
                    <th>Khối</th>
                    <th class="col-2"></th>
                </tr>
            </thead>
            @{
                int stt = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    stt++;
                    <tr>
                        <td>
                            @stt
                        </td>
                        <td>
                            @item.TenLop
                        </td>
                        <td>
                            @item.SiSo
                        </td>
                        <td>
                            @item.DoTuoi
                        </td>
                        <td>
                            @item.Khoi
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaLop }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaLop }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaLop })
                        </td>
                    </tr>
                }
            </tbody>
        </table>



    </div>

</div>
<div class="page">
    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page }))
</div>
