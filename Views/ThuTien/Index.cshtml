@model PagedList.IPagedList<QuanLyTruongMauGiao.Models.PHIEUTHUTIEN>
@using PagedList.Mvc;
<style>
    .anh {
        width: 100px;
        height: 100px;
    }

    .pagination > li > a {
        float: left;
        padding: 6px 12px;
        margin-left: -1px;
        line-height: 1.42857143;
        border: 1px solid #ddd;
    }

    .pagination > .active a {
        background-color: #337ab7;
        color: #fff;
    }

    .pagination li:hover {
        background-color: #687fff;
    }

    .pagination li a:hover {
        color: #fff;
    }
</style>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ibox">
    <div class="ibox-head">
        <div class="ibox-title">@Html.ActionLink("Thêm", "Create")</div>
    </div>
    <div class="ibox-body">
        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <tr>
                @using (Html.BeginForm())
                {
                    <p>
                        <select name="TrangThai">
                            <option value="all">All</option>
                            <option value="HoanThanh">Hoàn thành</option>
                            <option value="ChuaHoanThanh">Chưa hoàn thành</option>
                        </select>
                        <input type="submit" value="Lọc" />
                    </p>
                }
            </tr>
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Phiếu</th>
                    <th>Trẻ</th>
                    <th>Lớp</th>
                    <th>Ngày Lập</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            @{
                int stt = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    stt++;
                    <tr>
                        <td>
                            @stt
                        </td>
                        <td>
                            @item.MaPhieu
                        </td>
                        <td>
                            @item.TRE.TenTre
                        </td>
                        <td>
                            @item.TRE.LOP.TenLop
                        </td>
                        <td>
                            @item.NgayLapPhieu.ToString("dd-MM-yyyy")
                        </td>
                        @{
                            string trangThai = "";
                            if (item.TrangThai)
                            {
                                trangThai = "Hoàn thành";
                            }
                            else
                            {
                                trangThai = "Chưa hoàn thành";
                            }

                        }
                        <td>
                            @trangThai
                        </td>
                        <td>
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaPhieu })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-sm-12 col-md-5">
                Trang @(Model.PageCount < Model.PageNumber ?0:Model.PageNumber)/@Model.PageCount
            </div>
            <div class="page">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                 new PagedListRenderOptions
                      {
                    LinkToFirstPageFormat = "<<",
                    LinkToPreviousPageFormat = "<",
                    LinkToNextPageFormat = ">",
                    LinkToLastPageFormat = ">>",
                    MaximumPageNumbersToDisplay = 10,
                    DisplayEllipsesWhenNotShowingAllPageNumbers = false
                 })
            </div>
        </div>
    </div>

</div>