@model QuanLyTruongMauGiao.Models.TRE

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .ibox {
        background-color: #f1f1f1;    }
    .anh{
        width: 100px;
        height: 100px;
    }
</style>
<div class="form-control col-10">
    <h4>Thông tin chi tiết trẻ @Model.MaTre </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LOP.TenLop)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOP.TenLop)
        </dd>

        <dt>
            Phụ huynh
        </dt>
        <dd>@Model.PHUHUYNH.TenPH </dd>
        <div class="row">
            <div class="col-md-6">
                <div class="ibox">
                    <div class="ibox-head">
                        <div class="ibox-title">Chi tiết phụ huynh </div>
                        <div class="ibox-tools">
                            <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                            <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                        </div>
                    </div>
                    <div class="ibox-body">
                        <form class="form-horizontal">
                           <div class="form-group row">
                                <label class="col-sm-5 col-form-label" style="padding-top: 0"><b>Họ tên</b></label>
                                <div class="col-sm-10">
                                    @Html.DisplayFor(model => model.PHUHUYNH.TenPH)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label" style="padding-top: 0"><b>Ngày sinh</b></label>
                                <div class="col-sm-10">
                                    @Model.PHUHUYNH.NamSinh.ToString("dd/MM/yyyy")
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label" style="padding-top: 0"><b>Giới tính</b></label>
                                @if (Model.PHUHUYNH.GioiTinh)
                                {
                                    <div class="col-sm-10">
                                        Nam
                                    </div>
                                }
                                else
                                {
                                    <div class="col-sm-10">
                                        Nữ
                                    </div>
                                }
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label" style="padding-top: 0"><b>Địa chỉ</b></label>
                                <div class="col-sm-10">
                                    @Html.DisplayFor(model => model.PHUHUYNH.DiaChi)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label" style="padding-top: 0"><b>Điện thoại</b></label>
                                <div class="col-sm-10">
                                    @Html.DisplayFor(model => model.PHUHUYNH.DienThoai)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label" style="padding-top: 0"><b>Tài khoản</b></label>
                                <div class="col-sm-10">
                                    @Html.DisplayFor(model => model.PHUHUYNH.TenTK)
                                </div>
                            </div>
                            <a href="~/PHUHUYNH/Edit/@Model.PHUHUYNH.MaPH">Sửa</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <dt>
            @Html.DisplayNameFor(model => model.TenTre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenTre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </dt>

        <dd>
            @Model.NgaySinh.ToString("dd/MM/yyyy")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>

        @{
            if (Model.GioiTinh)
            {
                <dd>Nam</dd>
            }
            else
            {
                <dd>Nữ</dd>
            }
        }


        <dt>
            @Html.DisplayNameFor(model => model.QueQuan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QueQuan)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DanToc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DanToc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayNhapHoc)
        </dt>

        <dd>
            @Model.NgayNhapHoc.ToString("dd/MM/yyyy")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Anh)
        </dt>

        <dd>
            <img src="~/Image/@Model.Anh" class="anh"/>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.MaTre }) |
    @Html.ActionLink("Trở lại", "Index")
</p>
