@model PagedList.IPagedList<QuanLyTruongMauGiao.Models.TRE>
@using PagedList.Mvc;
<style>
    .anh {
        width: 100px;
        height: 100px;
    }

    .pagination > li > a {
        float: left;
        padding: 6px 12px;
        margin-left: -1px;
        line-height: 1.42857143;
        border: 1px solid #ddd;
    }

    .pagination > .active a {
        background-color: #337ab7;
        color: #fff;
    }

    .pagination li:hover {
        background-color: #687fff;
    }

    .pagination li a:hover {
        color: #fff;
    }
</style>



<div class="ibox">
    <div class="ibox-head">
        <div class="ibox-title">@Html.ActionLink("Thêm", "Create")</div>

    </div>
    <div class="ibox-body">
        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <td>STT</td>
                    <th>Tên lớp</th>
                    <th>Tên phụ huynh</th>
                    <th>Tên trẻ</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>Ảnh</th>
                </tr>
            </thead>
            @{
                int stt = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    stt++;
                    <tr>
                        <td>
                            @stt
                        </td>
                        <td>
                            <a href="~/Lop/Details/@item.LOP.MaLop">
                                @item.LOP.TenLop
                            </a>
                        </td>
                        <td>
                            @item.PHUHUYNH.TenPH
                        </td>
                        <td>
                            @item.TenTre
                        </td>
                        <td>
                            @item.NgaySinh.ToString("dd/MM/yyyy")
                        </td>
                        @{
                            if (item.GioiTinh)
                            {
                                <td>Nam</td>
                            }
                            else
                            {
                                <td>Nữ</td>
                            }
                        }
                   
                        <td>
                            <img class="anh" src="~/Image/Tre/@item.Anh" />
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaTre }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTre }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaTre })
                        </td>
                    </tr>
                }
            </tbody>
        </table>



    </div>

</div>
<center>
    <div class="page">
        @Html.PagedListPager(Model, page => Url.Action("Index",
            new { page }))
    </div>
</center>