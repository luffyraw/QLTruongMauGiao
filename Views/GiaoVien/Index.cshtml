@model PagedList.PagedList<QuanLyTruongMauGiao.Models.GIAOVIEN>
@using QuanLyTruongMauGiao.Models
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    QLMauGiao db = new QLMauGiao();
}
<style>
    .anh {
        width: 100px;
        height: 100px;
    }

    .pagination > li > a {
        float: left;
        padding: 6px 12px;
        margin-left: -1px;
        line-height: 1.42857143;
        border: 1px solid #ddd;
    }

    .pagination > .active a {
        background-color: #337ab7;
        color: #fff;
    }

    .pagination li:hover {
        background-color: #687fff;
    }

    .pagination li a:hover {
        color: #fff;
    }
</style>


<h3>Danh sách giáo viên</h3>
<div class="ibox">
    <div class="ibox-head">
        <div class="ibox-title">@Html.ActionLink("Thêm", "Create")</div>
    </div>
    <div class="ibox-body">
        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <td>STT</td>
                    <th>Tài khoản</th>
                    <th>Họ tên</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>Số điện thoại</th>
                    </tr>
            </thead>
            @{
                int stt = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    stt++;
                    <tr>
                        <td>
                            @stt
                        </td>
                        <td>
                            @item.TenTK
                        </td>
                        <td>
                            @item.TenGV
                        </td>
                        <td>
                            @item.NgaySinh.ToString("dd/MM/yyyy")
                        </td>
                      
                        @{
                            if (item.GioiTinh)
                            {
                                <td>Nam</td>
                            }
                            else
                            {
                                <td>Nữ</td>
                            }
                        }

                        <td>
                            @item.DienThoai
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaGV }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaGV }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaGV })
                        </td>
                    </tr>
                }
            </tbody>
        </table>



    </div>

</div>
<center>
    <div class="page">
        @Html.PagedListPager(Model, page => Url.Action("Index",
            new { page }))
    </div>
</center>
