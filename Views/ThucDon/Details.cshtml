@model QuanLyTruongMauGiao.Models.THUCDONNGAY

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Chi tiết thực đơn</div>
                <div class="ibox-tools">
                    <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                    <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                </div>
            </div>
            <div class="ibox-body">
                <form class="form-horizontal">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Ngày</label>
                        <div class="col-sm-10">
                            @Html.DisplayFor(model => model.Ngay)
                        </div>        
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Bữa sáng</label>
                        <div class="col-sm-10">
                            @Html.DisplayFor(model => model.BuaSang)
                        </div>                      
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Bữa trưa</label>
                        <div class="col-sm-10">
                            @Html.DisplayFor(model => model.BuaTrua)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Bữa xế</label>
                        <div class="col-sm-10">
                            @Html.DisplayFor(model => model.BuaXe)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 ml-sm-auto">
                            @Html.ActionLink("Sửa", "Edit", new { id = Model.MaTDN })
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
