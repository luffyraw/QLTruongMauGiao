@model PagedList.IPagedList<QuanLyTruongMauGiao.Models.TAIKHOAN>
@using PagedList.Mvc;

<style>
    .anh {
        width: 100px;
        height: 100px;
    }

    .pagination > li > a {
        float: left;
        padding: 6px 12px;
        margin-left: -1px;
        line-height: 1.42857143;
        border: 1px solid #ddd;
    }

    .pagination > .active a {
        background-color: #337ab7;
        color: #fff;
    }

    .pagination li:hover {
        background-color: #687fff;
    }

    .pagination li a:hover {
        color: #fff;
    }
</style>


<div class="ibox">
    <div class="ibox-head">
        <div class="ibox-title">@Html.ActionLink("Thêm", "Create")</div>
    </div>
    <div class="ibox-body">
        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        Tài khoản
                    </th>
                    <th>
                        Mật khẩu
                    </th>
                    <th>
                        Quyền truy cập
                    </th>
                    <th>
                        Trạng thái hoạt động
                    </th>
                    <th>
                        Ảnh đại diện
                    </th>
                    <th></th>
                </tr>

            </thead>
            @{
                int stt = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.TenTK
                        </td>
                        <td>
                            Không hiển thị
                        </td>
                        <td>
                            @item.PhanQuyen
                        </td>
                        <td>
                            @if (item.TrangThaiHD)
                            {
                                <p>Đang hoạt động</p>
                            }
                            else
                            {
                                <p>Không hoạt động</p>
                            }
                        </td>
                        <td>
                            @{
                                if (item.PhanQuyen == "Phụ huynh")
                                {
                                    <img class="anh" src="~/Image/PhuHuynh/@item.AnhDaiDien" />

                                }
                                else
                                {
                                    <img class="anh" src="~/Image/GiaoVien/@item.AnhDaiDien" />

                                }
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.TenTK }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.TenTK }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.TenTK })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <div class="page">
            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page }))
        </div>


    </div>

</div>

